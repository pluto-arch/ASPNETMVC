@model Blog.WebUI.Models.AppUser
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Ordinary.cshtml";
}

<div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">
    <form class="am-form" action="Edit" method="post">
        <fieldset>
            <legend>@ViewBag.Title</legend>
            <div class="am-form-group">
                <label for="name">用户名:</label>
                <input type="text" name="UserName" id="name" value="@Model.UserName">
                <input type="hidden" name="Id" id="uid" value="@Model.Id">
            </div>

            <div class="am-form-group">
                <label for="password">密码:</label>
                <input type="password" name="Password" id="password" value="">
            </div>

            <div class="am-form-group">
                <label for="email">邮箱:</label>
                <input type="email" name="Email" id="email" value="@Model.Email">
            </div>
            <p>
                <button type="submit" class="am-btn am-btn-default">提交</button>
                @Html.ActionLink("取消", "Index", null, new { @class = "am-btn am-btn-primary" })
            </p>
        </fieldset>
    </form>
</div>
