@using System.Security.Claims
@using Blog.WebUI.Infrastructure
@model IEnumerable<Claim>
@{ ViewBag.Title = "声明"; }


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="~/assets/css/amazeui.min.css" />
    <link rel="stylesheet" href="~/assets/css/admin.css">
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <!--easyui-->
    <link rel="stylesheet" type="text/css" href="~/Content/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/themes/icon.css">
    <!-- 注意：如果你直接复制所有代码到本地，上述css路径需要改成你本地的 -->
</head>
<body>

<table class="layui-table">
    <colgroup>
        <col width="150">
        <col width="200">
        <col>
    </colgroup>
    <thead>
    <tr>
        <th>Subject</th>
        <th>Issure</th>
        <th>Type</th>
        <th>value</th>
    </tr> 
    </thead>
    <tbody>
    @foreach (Claim claim in Model.OrderBy(x => x.Type)) {
        <tr>
            <td>@claim.Subject.Name</td>
            <td>@claim.Issuer</td>
            <td>@Html.ClaimType(claim.Type)</td>
            <td>@claim.Value</td>
        </tr>
    }
    </tbody>
</table>

    <script src="~/Scripts/jquery-3.3.1.min.js" charset="utf-8"></script>
    <script src="~/Scripts/layui/layui.js" charset="utf-8"></script>

</body>
</html>